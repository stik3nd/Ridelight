<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.support.v7.widget.CardView">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        tools:background="@color/white">

        <ImageView
            android:id="@+id/addAddressIcon"
            android:layout_width="@dimen/address_icon_size"
            android:layout_height="@dimen/address_icon_size"
            android:layout_marginStart="@dimen/spacing_normal"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@null"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            android:src="@drawable/ic_dropoff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:id="@+id/textAddress"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:minHeight="@dimen/address_icon_size"
            android:layout_marginStart="@dimen/spacing_micro"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:textSize="16sp"
            android:textColor="#666"
            android:text="@string/dropoff"
            tools:text="Address test, 460"
            app:layout_constraintTop_toTopOf="@+id/addAddressIcon"
            app:layout_constraintLeft_toRightOf="@+id/addAddressIcon"
            app:layout_constraintRight_toRightOf="parent"/>

        <FrameLayout
            android:id="@+id/buttonNext"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_default_height"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            android:layout_marginTop="@dimen/spacing_normal"
            app:layout_constraintTop_toBottomOf="@+id/textAddress"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_default_height"
                android:text="@string/confirm_dropoff"
                android:textAllCaps="true"
                android:clickable="false"
                android:background="@color/colorPrimary"
                android:theme="@style/Button.ColorPrimary"
                style="@style/Widget.AppCompat.Button.Borderless"/>

        </FrameLayout>

    </android.support.constraint.ConstraintLayout>

</merge>